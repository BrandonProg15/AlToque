@using AlToque.Models

<header></header>

<main>

    <!-- NAV PRINCIPAL -->
    <nav class="menu-principal">
        <a href="@Url.Action("Recompensas", "Home")"><button type="button">Recompensas</button></a>
        <a href="@Url.Action("Tareas", "Home")"><button type="button">Tareas</button></a>
        <a href="@Url.Action("Metodos", "Home")"><button type="button">Metodos</button></a>
        <a href="@Url.Action("Calendario", "Home")"><button type="button">Calendario</button></a>
    </nav>

    <!-- LISTADO DE TAREAS -->
    <section class="contenedor-tareas">
        <div class="tareas-header">
            <h2>Tareas</h2>
            <button id="btnAgregarTarea" class="boton-mas">+</button>
        </div>

        @foreach (var tarea in ViewBag.tareas)
        {
            <p>@tarea.titulo — @tarea.descripcion — @tarea.fechaInicio — @tarea.fechaFin — @tarea.IdUsuario</p>
            <br />
        }
    </section>

    <!-- POPUP LATERAL DERECHO -->
    <div id="popupTarea" class="popup-derecha">
        <div class="popup-contenido">
            <div class="popup-header">
                <h3>Nueva Tarea</h3>
                <span id="cerrarPopup" class="cerrar">&times;</span>
            </div>

            <div class="popup-body">
                @using (Html.BeginForm("Tareas", "Home", FormMethod.Post))
                {
                    <div class="campo">
                        <label>Título</label>
                        <input type="text" name="titulo" required />
                    </div>

                    <div class="campo">
                        <label>Descripción</label>
                        <textarea name="descripcion"></textarea>
                    </div>

                    <div class="fechas">
                        <div>
                            <label>Fecha de inicio</label>
                            <input type="date" name="fechaInicio" required />
                        </div>
                        <div>
                            <label>Fecha de fin</label>
                            <input type="date" name="fechaFin" required />
                        </div>
                    </div>

                    <button type="submit" class="boton-guardar">Guardar tarea</button>
                }
            </div>
        </div>
    </div>

    <!-- BOTONES DE ACCIÓN -->
    <div class="acciones-tareas">
        <a href="@Url.Action("EditarTarea", "Home")"><button type="button">Editar Tarea</button></a>
        <a href="@Url.Action("EliminarTarea", "Home")"><button type="button">Eliminar Tarea</button></a>
        <a href="@Url.Action("FinalizarTarea", "Home")"><button type="button">Finalizar Tarea</button></a>
    </div>

</main>

<!-- JS -->
<script>
    const popup = document.getElementById('popupTarea');
    const btnAbrir = document.getElementById('btnAgregarTarea');
    const btnCerrar = document.getElementById('cerrarPopup');

    btnAbrir.onclick = () => popup.classList.add('mostrar');
    btnCerrar.onclick = () => popup.classList.remove('mostrar');

    window.onclick = (e) => {
        if (e.target === popup) popup.classList.remove('mostrar');
    };
</script>

<!-- CSS -->
<style>
    /* NAV */
    .menu-principal {
        display: flex;
        gap: 10px;
        margin: 10px 0 20px 10px;
    }

    .menu-principal button {
        background-color: #3b3aaf;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 8px 14px;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s;
    }

    .menu-principal button:hover {
        background-color: #2e2c94;
        transform: scale(1.05);
    }

    /* CABECERA DE TAREAS */
    .tareas-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 90%;
        max-width: 1000px;
        margin: 0 auto 15px auto;
        margin-left: 1%;
    }

    .tareas-header h2 {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1a1a6b;
    }

    /* BOTÓN + */
    .boton-mas {
        background-color: #3b3aaf;
        color: #fff;
        font-size: 1.8rem;
        border: none;
        border-radius: 50%;
        width: 4%;
        height: 4%;
        cursor: pointer;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.25);
        transition: 0.25s;
        margin-right: 60%;
    }

    .boton-mas:hover {
        background-color: #2e2c94;
        transform: scale(1.1);
    }

    /* POPUP */
    .popup-derecha {
        position: fixed;
        top: 0;
        right: -35%;
        width: 30%;
        height: 100%;
        background-color: #f3f7ff;
        box-shadow: -4px 0 15px rgba(0, 0, 0, 0.25);
        transition: right 0.4s ease;
        z-index: 999;
        border-radius: 12px 0 0 12px;
        overflow-y: auto;
    }

    .popup-derecha.mostrar {
        right: 0;
    }

    .popup-contenido {
        padding: 20px;
    }

    /* CABECERA DEL POPUP */
    .popup-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #4ec4d3;
        padding: 10px 16px;
        border-radius: 12px 12px 0 0;
        color: #0e0e4b;
    }

    .popup-header h3 {
        margin: 0;
        font-weight: 700;
    }

    .cerrar {
        font-size: 1.8rem;
        cursor: pointer;
        color: #0e0e4b;
        transition: 0.3s;
    }

    .cerrar:hover {
        color: #fff;
        transform: scale(1.2);
    }

    /* CUERPO DEL POPUP */
    .popup-body {
        background-color: #dfe9ff;
        border-radius: 0 0 12px 12px;
        padding: 20px;
    }

    .campo {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: 600;
        color: #1c1b70;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="date"],
    textarea {
        width: 100%;
        padding: 8px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 0.95rem;
        outline: none;
    }

    textarea {
        min-height: 90px;
        resize: vertical;
    }

    .fechas {
        display: flex;
        gap: 10px;
    }

    /* BOTÓN GUARDAR */
    .boton-guardar {
        width: 100%;
        background-color: #2e2c94;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 10px;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 10px;
    }

    .boton-guardar:hover {
        background-color: #1f1d7c;
    }


</style>
